source 'https://rubygems.org'

gem 'rest-client', '~> 2.1'   # Equivalent to Rest Assured for API testing
gem 'rspec', '~> 3.12'       # Equivalent to TestNG for testing framework
gem 'httparty', '~> 0.20'    # Alternative HTTP client similar to Apache HttpClient
gem 'yaml', '~> 0.1'         # Equivalent to SnakeYAML for YAML parsing
gem 'openapi_parser'         # Similar to OpenAPI Parser
gem 'json'
gem 'net-http'
gem 'pry'
gem 'openapi3_parser'